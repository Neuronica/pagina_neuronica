{
  "hosting": {
    "site": "pagina-neuronica-staging",
    "public": "dist/neuronica/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api{,/**}",
        "run": {
          "serviceId": "pagina-neuronica-backend",
          "region": "us-west1"
        }
      },
      {
        "source": "/**",
        "run": {
          "serviceId": "neuronica-ssr",
          "region": "us-west1"
        }
      }
    ]
  }
}
