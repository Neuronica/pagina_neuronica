{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
    "hosting": {
      "rewrites": [
        { "source": "/api/**", "run": { "serviceId": "pagina-neuronica-backend", "region": "us-west1" } }
      ]
    }

}